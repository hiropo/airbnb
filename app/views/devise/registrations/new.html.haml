.wrapper
  .signupbox
    .signupbox__contents
      %h2 Sign up with Facebook or Google
      %br/
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          = f.email_field :email, autofocus: true, placeholder: " Email adress"
        .field
          %br/
          = f.text_field :firstname, placeholder: " Firstname"
        .field
          %br/
          = f.text_field :lastname, placeholder: " Lastname"
        .field
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "off", placeholder: " Create a Password"
        .signupbox__contents-birthday
          %br/
          %h3 Birthday
          To sign up, you must be 18 or older. Other people wonâ€™t see your birthday.
        .signupbox__contents__button
          %br/
          = f.button "Sign up", type: 'submit', class: "signup"
      %br/
      = render "devise/shared/links"
